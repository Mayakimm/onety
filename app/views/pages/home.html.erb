        <%= form.label :phone, "전화번호", class: 'form-label', style: 'font-weight:bold' %>
        <span style="color:#FF5E00;">*</span>
        <%= form.telephone_field :phone, class: 'form-control input-white', required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :email, "이메일", class: 'form-label', style: 'font-weight:bold' %>
        <span style="color:#FF5E00;">*</span>
        <%= form.email_field :email, class: 'form-control input-white', required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :message, "내용", class: 'form-label', style: 'font-weight:bold' %>
        <span style="color:#FF5E00;">*</span>
        <%= form.text_area :message, class: 'form-control input-white', rows: 4, maxlength: 1300, required: true %>
        <p id="word-limit" style="color: lightgray; font-size: 12px;">최대 작성 길이는 한글 1300자입니다.</p>
      </div>

      <div style="display: flex; justify-content: center; margin-top: 40px;">
        <%= form.submit "신청하기", class: 'btn', style: 'width:100px; background-color:#FF5E00; border-radius:30px; color:white;' %>
