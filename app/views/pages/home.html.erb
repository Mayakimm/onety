    <%= form_with model: @contact, url: contacts_path, local: true, data: { turbo: false } do |form| %>
      <div class="mb-3">
        <%= form.label :name, "성명", class: 'form-label', style: 'font-weight:bold' %>
        <span style="color:#FF5E00;">*</span>
        <%= form.text_field :name, class: 'form-control input-white', required: true %>
      </div>

